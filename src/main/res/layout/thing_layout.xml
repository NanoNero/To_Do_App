<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/thing_linear_layout"
    android:background="#fffdfdff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Category"
            android:id="@+id/thing_main"
            android:layout_marginTop="12dp"
            android:textSize="25dp"
            android:textColor="#EEEEEE"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subcategory"
            android:id="@+id/thing_sub"
            android:layout_below="@+id/thing_main"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:textColor="#EEEEEE"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/thing_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="31dp"
        android:text="Description"
        android:textColor="#a59696"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/thing_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/thing_date"
        android:layout_centerVertical="true"
        android:text="Priority"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#270B61" />

    <TextView
        android:id="@+id/thing_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView10"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="54dp"
        android:ems="10"
        android:inputType="date"
        android:text="Date"
        android:textColor="#270B61" />

    <TextView
        android:id="@+id/thing_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="time"
        android:text="Time"
        android:textColor="#270B61" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text=" Priority : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#270B61" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="8dp"
        android:text="Time :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#270B61" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/thing_date"
        android:layout_alignParentStart="true"
        android:text="Date :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#270B61" />


</RelativeLayout>